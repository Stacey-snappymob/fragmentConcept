<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="16dp">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/fragmentByDefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Fragment by Default"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/fragmentWithInteractionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Fragment with Interaction"
            app:layout_constraintTop_toBottomOf="@+id/fragmentByDefaultButton"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/draggableBottomFragmentWithInteractionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Draggable Fragment with Interaction"
            app:layout_constraintTop_toBottomOf="@+id/fragmentWithInteractionButton"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/draggableFragmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Draggable Fragment"
            app:layout_constraintTop_toBottomOf="@+id/draggableBottomFragmentWithInteractionButton"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/draggableWrapContentFragmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Draggable Fragment with wrap parent"
            app:layout_constraintTop_toBottomOf="@+id/draggableFragmentButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>